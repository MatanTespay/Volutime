<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/layout_bg"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/row_layout_marginBottom"
        android:layout_marginLeft="@dimen/row_layout_marginLeft"
        android:layout_marginRight="@dimen/row_layout_marginRight"
        android:layout_marginTop="@dimen/row_layout_marginTop"
        app:cardCornerRadius="@dimen/activity_vertical_margin"
        app:cardElevation="@dimen/activity_vertical_margin"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/readMode">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:dividerPadding="@dimen/cardview_default_elevation">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:maxLines = "3"
                    android:minLines="1"
                    android:scrollbars = "vertical"
                    android:textColor="@color/caldroid_black"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLines = "3"
                    android:minLines="1"
                    android:scrollbars = "vertical"
                    android:textColor="@color/caldroid_black"
                    tools:ignore="RtlHardcoded" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/startLbl"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:maxLines = "3"
                        android:minLines="1"
                        android:text="@string/event_start"
                        android:scrollbars = "vertical"
                        android:textColor="@color/caldroid_black"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/startTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:maxLines = "3"
                        android:minLines="1"
                        android:scrollbars = "vertical"
                        android:textColor="@color/caldroid_black"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/endLbl"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:maxLines = "3"
                        android:minLines="1"
                        android:layout_marginBottom="5dp"
                        android:scrollbars = "vertical"
                        android:text="@string/event_end"
                        android:textColor="@color/caldroid_black"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/endTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:maxLines = "3"
                        android:minLines="1"
                        android:scrollbars = "vertical"
                        android:textColor="@color/caldroid_black"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>
